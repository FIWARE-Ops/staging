<meta name="twitter:site" content="@FIWARE">
<meta name="twitter:creator" content="@FIWARE">
<meta name="twitter:image" content="{{socialMedia}}">
<meta name="twitter:label1" content="Time to read">
<meta name="twitter:data1" content="5 minutes">

<!-- Linked Data -->
<script type='application/ld+json'> 
{
  "@context": "https://schema.org/",
	"@type": "JobPosting",
	"datePosted": "{{formatDate postingDate}}",
	"description": "{{mission}}",
	"title": "{{name}}",
	"employmentType": "{{type}}",
	"hiringOrganization": {
		"@type": "Organization",
		"name": "FIWARE Foundation"
	},
	"identifier": {
		"@type": "PropertyValue",
		"name": "{{name}}",
		"value": "{{formId}}"
	},
	"image": "{{socialMedia}}",
	"directApply": "https://www.fiware.org/foundation/careers/job?id={{createClass name}}",
	"employerOverview": "FIWARE Foundation is a friendly, young and dynamic team with multiple locations worldwide and the possibility to work independently. Place of work can be in Berlin (FIWARE Foundation offices) or in Germany, Spain, Italy (remotely from home)",
	"employmentUnit": "{{domain}}",
	"jobLocation": {
		"@type": "Place",
		"address": {
			"@type": "PostalAddress",
			"streetAddress": "Franklinstrasse 13A",
			"addressLocality": "Charlottenburg",
			"addressRegion": "Berlin",
			"postalCode": "10587",
			"addressCountry": "DE"
		}
	},
	"url": "https://www.fiware.org/foundation/careers/job?id={{createClass name}}"
}
 </script>
