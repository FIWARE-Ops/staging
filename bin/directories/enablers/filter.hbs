<div class="dropdown-container">

    <div class="filter-element">
        <label for="filterType" class="dropdown-label">Chapter</label>
        <select name="" id="filterType">
            <option value='*'>All Chapters</option>
            {{#each types}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>
    <div class="filter-element">
        <label for="filterDomain" class="dropdown-label">Function</label>
        <select name='' id='filterDomain'>
            <option value='*'>All Functions</option>
            {{#each domains}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>
    <div class="filter-element">
        <label for="filterTechnology" class="dropdown-label">Technology</label>
        <select name='' id='filterTechnology'>
            <option value='*'>All Technologies</option>
            {{#each technologies}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>

    <div class="filter-element">
        <label class="dropdown-label">Membership</label>
        <input type="checkbox" name="fiwareMember" id="fiwareMember" />
        <label class="checkbox-label" for="fiwareMember">FIWARE Catalogue</label>
    </div>

</div>