<div>
    <div class='products-record'>
        <div class='products-label'>
            <span id="ico-products" class="material-symbols-outlined">video_library</span>
            <span>Recordings Library</span>
        </div>
        <span id='filteredCompanies'></span>
    </div>
</div>

<div class="search-sort-container">
    <div class="search-element">
        <div class="resetInput"></div>
        <input type="search" id="searchInput" placeholder="Search by keywords" />
    </div>

    <div class='sort-element'>
        <label class='sort-by'>Sort by</label>
        <div class='sort-buttons'>
            <div class='sort-single-element'>
                <button id='orderByYear'>
                    <span id='ico-sortby-year' class='material-symbols-outlined'>date_range</span>
                    Oldest First
                </button>
            </div>

            <div class='sort-single-element'>
                <button id='orderByName'>
                    <span id='ico-sortby-alpha' class='material-symbols-outlined'>north_east</span>
                    Easy to Hard
                </button>
            </div>
        </div>
    </div>
</div>



<p class='filter-by'>
    <span id='ico-filter-all' class='material-symbols-outlined'>filter_list</span>
    Filter by
</p>

<div class='filters-checkbox'>
    <br />
</div>

<div class='dropdown-container'>
    <div class='filter-element'>
        <label for='filterType' class='dropdown-label'>Chapter</label>
        <select name='' id='filterType'>
            <option value='*'>All Chapters</option>
            {{#each types}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>
    <div class='filter-element'>
        <label for='filterDomain' class='dropdown-label'>Audience</label>
        <select name='' id='filterDomain'>
            <option value='*'>All Audiences</option>
            {{#each domains}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>
    <div class='filter-element'>
        <label for='filterTechnology' class='dropdown-label'>Keywords</label>
        <select name='' id='filterTechnology'>
            <option value='*'>All Keywords</option>
            {{#each technologies}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
        </select>
    </div>
</div>