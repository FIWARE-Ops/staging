<!DOCTYPE html>
<html lang="en-US" prefix="og: https://ogp.me/ns#">
<head>

<!-- W3C HTML Tags -->
<title>{{category}}: {{organisationName}} - {{productName}}</title>

<link rel="canonical" href="https://www.fiware.org{{social}}" />
<link rel="shortcut icon" href="https://www.fiware.org/wp-content/uploads/2017/11/favicon-1.png" />

<meta name="keywords" content="{{domains}}{{#if (gt technologies.length 0)}},{{technologies}}{{/if}}">
<meta name="description" content="{{excerpt}}">

{{#if member}}
<meta http-equiv="refresh" content="1; url=https://www.fiware.org/showcase/product-details/?category={{cat}}&id={{hash}}" />
<meta property="og:url" content="https://www.fiware.org/marketplace/product-details/?category={{cat}}&id={{hash}}">
{{else}}
<meta http-equiv="refresh" content="1; url={{productWebsite}}" />
<meta property="og:url" content="https://www.fiware.org{{social}}">
{{/if}}

<!-- Open Graph Tags -->
<meta property="og:locale" content="en_US">
<meta property="og:type" content="article">
<meta property="og:title" content="{{category}}: {{organisationName}} - {{productName}} {{#if (gt technologies.length 0)}}({{technologies}}){{/if}}">
<meta property="og:description" content="{{excerpt}}">


<meta property="og:site_name" content="FIWARE">
<meta property="og:image" content="{{featuredImageUrl}}">
<meta property="og:image:secure_url" content="{{featuredImageUrl}}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="627">
<meta property="og:image:alt" content="{{productName}}">
<meta property="og:image:type" content="image/png">

<!-- Twitter Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{category}}: {{organisationName}} - {{productName}} {{#if (gt technologies.length 0)}}({{technologies}}){{/if}}">
<meta name="twitter:description" content="{{excerpt}}">
<meta name="twitter:site" content="@FIWARE">
<meta name="twitter:creator" content="@FIWARE">
<meta name="twitter:image" content="{{featuredImage}}">
<meta name="twitter:label1" content="Time to read">
<meta name="twitter:data1" content="5 minutes">

<!-- Linked Data -->
<script type='application/ld+json'> 
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "brand": "{{organisationName}}",
  "logo": "{{img}}",
  "keywords": "{{domains}}{{#if (gt technologies.length 0)}},{{technologies}}{{/if}}",
  "name": "{{productName}}",
  "category": "{{category}}",
  "image": "{{featuredImage}}",
  "description": "{{excerpt}}"
}
</script>
<style>
body {
  display: none;
}
</style>
</head>
<body>
  <h1>{{category}}: {{organisationName}} - {{productName}} {{#if (gt technologies.length 0)}}({{technologies}}){{/if}}</h1>
  <p>
   {{excerpt}}
  </p>
  {{{description}}}
  {{{challenge}}}
  {{{references}}}
  {{{awards}}}
  

  <img src="{{logo}}" alt="{{organisationName}}"/>
  <img src="{{featuredImageUrl}}" alt="{{productName}}"/>
                 
   </body>
</html>