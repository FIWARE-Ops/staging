{{#each this}}


<div class='grid-item {{createClass track}} {{#if (ne session '')}}{{createClass session}}{{else}}{{createClass title}}{{/if}}{{#each speakers}} {{createClass name}}{{/each}} {{createClass shortDate}}'>
    <div class="gridElementTextContainer{{#if moderated}} moderated{{/if}}">
      {{#if (gt numSpeakers 0)}}
      <a href="./{{#if description}}program{{else}}program-details-summary{{/if}}?id={{createClass title}}">
      {{/if}}
        <div class="chip-track">
          <div class="track {{trackColor}}">{{track}}</div>
          {{#if (ne prefix '')}}<span class="title-type {{trackColor}}">{{prefix}}</span>{{/if}}
        </div>
        <p class="panel-title {{#if (ne session '')}}session{{else}}{{trackColor}}{{/if}}">{{title}}</p> 
        <span class="excerpt">{{session}}</span>
        <div class="panel-info">
          <div class="date-time">
            <h3 class="date">{{shortDate}}</h3>
            <span class="separator-dot"></span>
            <span class="time">{{start}} â€“ {{end}}</span>
          </div>
          {{#if (ne location '')}}
          <span class="separator-dot"></span>
          <span class="place">{{location}}</span>
          {{/if}}
        </div>
      {{#if (gt numSpeakers 0)}}
      </a>
      {{/if}}
    </div>

    {{#if (eq numSpeakers 0)}}
    <div class="speakers-container">
      <div class="session-picture {{trackColor}}">
        <img src="{{img}}" loading="lazy" alt=""/>
      </div>
      {{#if description}}
      <div class="foot{{#if moderated}} moderated{{/if}}">
        <a class="btn-primary" href="./{{#if description}}program{{else}}program-details-summary{{/if}}?id={{createClass title}}">
          <span class="material-symbols-outlined">info</span>
          {{#if moderated}}
            Session details
          {{else}}
            See details
          {{/if}}
        </a>
      </div>
      {{/if}}
    </div>
    {{else}}
    <div class="speakers-container{{#if moderated}} moderated{{/if}}">
      {{#if (and moderated (gt numSpeakers 0))}} 
      <div class="moderated-by">
        Session moderated by
      </div>
      {{/if}}
      <div class="speakers">
        {{#each speakers}}
        <div class="speaker" {{#if shortJob}} data-modal='{{createClass name}}'{{/if}}>
          <div class="profile-picture">
            {{#if img}}
            <img decoding="async" alt="{{name}}" src="{{img}}" loading="lazy">
            {{else}}
            <img decoding="async" alt="" src="https://www.fiware.org/wp-content/directories/people/images/ico_user.png" loading="lazy">    
            {{/if}}
          </div>
          <div class="speaker-info">
            <div class="speaker-name">{{name}}</div>
            <div class="speaker-job-title">{{shortJob}}</div>
            <div class="speaker-company">{{{multiline company}}}</div>
            <div class="btn-icon">
      				<span class="material-symbols-outlined icon cta small">trending_flat</span>
    				</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}
    {{#if description}}
    <div class="foot{{#if moderated}} moderated{{/if}}">
      <a class="btn-primary" href="./{{#if description}}program{{else}}program-details-summary{{/if}}?id={{createClass title}}">
        <span class="material-symbols-outlined">info</span>
        {{#if moderated}}
          Session details
        {{else}}
          See details
        {{/if}}
      </a>
    </div>
    {{/if}}
  </div>
{{/each}}
