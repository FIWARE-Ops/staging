{{#if (eq this.length 0)}}
    <div class='grid-item'>
        <div class="gridElementLogoContainer">
                <picture>
                    <source srcset="https://www.fiware.org/wp-content/directories/careers/images/office-manager.webp" type="image/webp"/>
                    <img class="gridElementLogo" src="https://www.fiware.org/wp-content/directories/careers/images/office-manager.svg" loading="lazy"/>
                </picture>
        </div>
        <div class="gridElementTextContainer">
            <a href="./job">
               
                <h6 class="cat-name">No Open Positions Found</h6>
                <h4 class="excerpt-rd">There are no job openings to be found at the moment.</h4>
            </a>
      
        </div>
    </div>
{{/if}}

{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domain}}'>
        <a href="./job?id={{createClass name}}">
            <div class="gridElementLogoContainer">
                <picture>
                    <source srcset="{{webp img}}" type="image/webp"/>
                    <img class="gridElementLogo" src="{{img}}" loading="lazy"/>
                </picture>
            </div>
        </a>
        <div class="gridElementTextContainer">
            <a href="./job?id={{createClass name}}">
               
                <h6 class="cat-name">{{name}}</h6>
                <h4 class="excerpt-rd">{{mission}}</h4>
            </a>
            {{#if (gt domain.length 0)}}
            <div class='chip-domain'>
                <ul class='chips'>
                {{#each domain}}
                    <li>{{this}}</li>
                {{/each}}
                </ul>
                <span class='chips-gradient'></span>
            </div>
            {{/if}}
            <div class="icons">
                <div class="oc-attributes">
                    <div class="oc-attribute">
                        <h6 class="seniority-level">{{type}}</h6>
                    </div>
                    {{#if (eq recent true)}}
                    <div class="oc-attribute">
                        <svg height="20" width="20" class="blinking">
                            <circle cx="10" cy="10" r="8" fill="#15a97c"></circle>
                        </svg>
                        <span class="new">NEW</span>
                    </div>
                    {{/if}}
               </div>
            </div>
        </div>
    </div>
{{/each}}
