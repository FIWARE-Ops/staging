{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domain}} {{year}} {{createClass language}}'>
    <a href="{{website}}">
        <div class="gridElementLogoContainer">
            <picture>
               <source srcset="{{webp thumbnail}}" type="image/webp"/>
               <img class="gridElementLogo" src="{{thumbnail}}" loading="lazy"/>
            </picture>
        </div>
    </a>
    <div class="gridElementTextContainer">
        <span class="year hidden">{{year}}</span>
        <a href="{{website}}">
            <h6 class="cat-name">{{name}}</h6>
        </a>
        {{#if (gt domain.length 0)}}
            <div class='chip-domain'>
                <ul class='chips'>
                {{#each domain}}
                    <li>{{this}}</li>
                {{/each}}
                </ul>
                <span class='chips-gradient'></span>
            </div>
        {{/if}}
        <div class="icons">
            {{#if (ne medium '')}}
            <a class="cat-info" target="_blank" href="{{medium}}">
                <!--span class="material-symbols-outlined">description</span-->
                Medium
            </a>
            {{/if}}
            {{#if (ne pdfUrl 'https://www.fiware.org/wp-content/uploads')}}
            <a class="cat-info" target="_blank" href="{{pdfUrl}}">
                <!--span class="material-symbols-outlined">description</span-->
                PDF
            </a>
            {{/if}}
            <img src='{{flagUrl}}' alt='{{language}}' class='flag' {{#if (gt @index 9)}}loading="lazy"{{/if}} />
        </div>
    </div>
</div>
{{/each}}