<div class="et_pb_column et_pb_column_1_2 et_pb_column_4  et_pb_css_mix_blend_mode_passthrough">

    <div id="is-image" class="et_pb_module et_pb_image et_pb_image_2">
        <a href="{{website}}">
            <span class="et_pb_image_wrap "><img class="is-featured-image" decoding="async" fetchpriority="high" width="970"
                height="745" src="{{img}}" alt=""
                title="{{name}}"
                srcset="{{img}} 970w, {{thumbnail}} 300w, {{thumbnail}} 768w, {{thumbnail}} 610w, {{thumbnail}} 480w"
                sizes="(max-width: 970px) 100vw, 970px" class="wp-image" /></span>
        </a>
    </div>
</div>
<div class="et_pb_column et_pb_column_1_2 et_pb_column_5  et_pb_css_mix_blend_mode_passthrough et-last-child">

    <div id="domains" class="et_pb_module et_pb_text et_pb_text_2  et_pb_text_align_left et_pb_bg_layout_dark">

        <div class="et_pb_text_inner is-domains">
        	 {{#if (gt domain.length 0)}}
                {{appendTexts domain}} 
	        {{/if}}
        </div>
    </div>
    <div class="et_pb_module et_pb_text et_pb_text_3  et_pb_text_align_left et_pb_bg_layout_light">

        <div class="et_pb_text_inner">
            <a href="{{website}}">
                <h1 id="is-title">{{name}}</h1>
            </a>
            <p id="is-excerpt">{{description}}</p>
        </div>
    </div>
    <div class="et_pb_module et_pb_code et_pb_code_1">

        <div class="et_pb_code_inner">
            <div class="cover-cta">
                <a id="is-blogpost" class="details"
                    href="{{website}}"
                    rel="noopener"><span class="material-symbols-outlined">description</span>Read</a>
                {{#if (ne pdfUrl 'https://www.fiware.org/wp-content/uploads')}}
                <a id="is-pdf" class="details"
                    href="{{pdfUrl}}" target="_blank"
                    rel="noopener"><span class="material-symbols-outlined">download</span>Download</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>